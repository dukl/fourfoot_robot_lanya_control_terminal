<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.speechrec.PaintVedio
        android:id="@+id/paintVedio"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <Button 
            android:id="@+id/lanya"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="蓝牙连接"/>
        <LinearLayout 
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/front"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="front"/>
            <Button 
                android:id="@+id/back"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="back"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/left"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="left"/>
            <Button 
                android:id="@+id/right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="right"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/leftTurn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="LTurn"/>
            <Button 
                android:id="@+id/rightTurn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="RTurn"/>
        </LinearLayout>

        <Button 
            android:id="@+id/stand"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="stand"/>
        <Spinner 
            android:id="@+id/state"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姿态选择"/>

        <Button 
            android:id="@+id/yuyin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="语音录入"/>
    </LinearLayout>

    
</RelativeLayout>